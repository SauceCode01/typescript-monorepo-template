{
  "name": "typescript-monorepo",
  "version": "0.0.0",
  "description": "",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "libs/*"
  ],
  "scripts": {
    "build-libs": "npm run build --workspace=@libs/api-typing",
    "build-packages": "npm run build --workspace=@packages/api-contracts",
    "build-apps": "npm run build --workspace=apps/web",
    "build": "npm run build-libs && npm run build-packages && npm run build-apps",
    "postinstall": "npm run build"
  }
}
